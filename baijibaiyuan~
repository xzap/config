#!/bin/bash
#求百鸡百钱的问题
#公鸡的价格
cock=${1:-5}
#母鸡的价格
hen=${2:-3}
#小鸡这里指的是1钱几只,与公鸡母鸡不同。
chicken=${3:-2}
num=1
let cockbig=100/$cock
let henbig=100/$hen
for (( i = 0; i <= cockbig; i++ )); do
for (( j = 0; j <= henbig; j++ )); do
let all=$i*$cock+$j*$hen
let chickennum=(100-$all)*$chicken
let ji=$i+$j+$chickennum
	if [ $all -le 100 ]&&[ $ji = 100 ] ;then

echo "$num  公鸡$i只，母鸡$j只,小鸡$chickennum只"
((num++))
fi   
done
	
done
