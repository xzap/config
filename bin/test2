usage(){
echo -e "\t Usage: `basename $0`不是这样用的,请看说明"
cat <<EOF


   ==================下面是说明==================

        主要就是根据参数来输出需要的信息
	-riqi		     这个是输出日期的
	-nongli=""	     显示农历
	-chengshi=""         查询的城市
	-tianqi=""           天气
	-qiwen=""            温度
	-fengxiang=""        风向
	-ziwaixian=""        紫外线
	-chuanyi=""          穿衣指数
	-icon=""             显示的图标

    ===========================================

EOF
}
usage
